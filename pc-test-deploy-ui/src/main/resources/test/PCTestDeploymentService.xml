  <title>Call PhenomeCentral test deployment script service</title>
  <comment/>
  <minorEdit>false</minorEdit>
  <syntaxId>xwiki/2.1</syntaxId>
  <hidden>true</hidden>
  <content>{{velocity}}
#if ("$!{request.action}" == "delete" &amp;&amp; "$!{request.buildName}" != "")
  $services.pcTestDeployment.deleteServer("$!{request.buildName}")
#elseif ("$!{request.action}" == "load-data" &amp;&amp; "$!{request.ip}" != "" &amp;&amp; "$!{request.dataName}" != "")
  $services.pcTestDeployment.loadTestData("$!{request.ip}", "$!{request.dataName}"))
#else
  $services.pcTestDeployment.deploy("$!{request.pnBrnachName}", "$!{request.rmBrnachName}", "$!{request.pcBrnachName}", "$!{request.buildName}"))
#end
{{/velocity}}</content>
